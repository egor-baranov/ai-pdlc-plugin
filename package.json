{
  "name": "ai-pdlc-plugin",
  "displayName": "ai-pdlc-plugin",
  "description": "AI PDLC Plugin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:aiPdlcChatView"
  ],
  "main": "./dist/extension.js",
  "contributes": { 
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiPdlcChatContainer",
          "title": "GigaStudio",
          "icon": "resources/dark/chat.svg"
        }
      ]
    },
    "views": {
      "aiPdlcChatContainer": [
        {
          "id": "aiPdlcChatView",
          "name": "GigaStudio",   
          "type": "webview",                 
          "icon": "resources/dark/chat.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aiPdlc.newSession",
          "when": "view == aiPdlcChatView",
          "group": "navigation"
        },
        {
          "command": "aiPdlc.toggleFullScreen",
          "when": "view == aiPdlcChatView",
          "group": "navigation"
        },
        {
          "command": "aiPdlc.openSettings",
          "when": "view == aiPdlcChatView",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "aiPdlc.newSession",
        "title": "New Session",
        "icon": "$(add)",
        "group": "GigaStudio"
      },
      {
        "command": "aiPdlc.toggleFullScreen",
        "title": "Open in new window",
        "icon": "$(link-external)",
        "group": "GigaStudio"
      },
      {
        "command": "aiPdlc.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)",
        "group": "GigaStudio"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "vscode": "^1.1.37"
  }
}
